@model EmployeeHomework.Models.Employee
@{
}

<div>
    <h1>
        Add a new employee
    </h1>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input type="text" class="form-control" id="first-name" asp-for="FirstName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input type="text" class="form-control" id="last-name" asp-for="LastName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" id="title" asp-for="Title" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>

</div>