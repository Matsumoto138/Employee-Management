@{
    ViewData["Title"] = "Home Page";
}
@model List<EmployeeHomework.Models.Employee>

<div class="text-center">
    <h1 class="display-4">Employees</h1>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Title</td>
                    <td><a class="nav-link text-info" asp-area="" asp-controller="Home" asp-action="Orders">Orders</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
